{
  "name": "scaffolded-learning-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A scaffolded learning coding interview application - monorepo",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@learning/web",
    "dev:legacy": "vite",
    "build": "turbo run build",
