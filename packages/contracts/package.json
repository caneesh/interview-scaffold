{
  "name": "@learning/contracts",
  "version": "1.0.0",
  "description": "DTOs and API schemas for the learning platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./dto": {
      "types": "./dist/dto/index.d.ts",
      "import": "./dist/dto/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@learning/core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
