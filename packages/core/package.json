{
  "name": "@learning/core",
  "version": "1.0.0",
  "description": "Pure TypeScript domain logic - no framework dependencies",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "import": "./dist/entities/index.js"
    },
    "./ports": {
      "types": "./dist/ports/index.d.ts",
      "import": "./dist/ports/index.js"
    },
    "./policies": {
      "types": "./dist/policies/index.d.ts",
      "import": "./dist/policies/index.js"
    },
    "./use-cases": {
      "types": "./dist/use-cases/index.d.ts",
      "import": "./dist/use-cases/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {},
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "domain",
    "pure",
    "typescript"
  ]
}
